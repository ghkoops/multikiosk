{
    "manifest_version": 2,
    "background": 
    {
        "page": "html/background.html"
    },

    "browser_action": 
    {
        "default_icon": "img/multikiosk_32.png",
        "default_title": "MultiKiosk - Automatically rotate through urls."
    },

    "description": "Automatically rotates specified urls in full screen (kiosk) mode. Supports basic auth and custom authentifications based on login and passwords fields.",
    "icons": 
    {
        "128": "img/multikiosk_128.png",
        "48": "img/multikiosk_48.png",
        "32": "img/multikiosk_32.png",
        "19": "img/multikiosk_19.png"
    },

    "name": "MultiKiosk",
    "options_page": "html/options.html",
    "permissions": 
    [
        "tabs",
        "http://*/",
        "https://*/",
        "webRequest",
        "webRequestBlocking",
        "storage"
    ],

    "version": "1.0.0"
}